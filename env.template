# ============================================
# Auto Service Connect - Frontend Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Note: Next.js automatically loads .env.local files

# ============================================
# API Configuration
# ============================================
# Backend API base URL (with /api suffix)
# Development: http://localhost:3000/api
# Production: https://api.yourdomain.com/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Backend API URL for WebSocket connections (without /api suffix)
# This is used for Socket.IO connections
# Development: http://localhost:3000
# Production: https://api.yourdomain.com
# Note: WebSocket will automatically use /chat namespace
NEXT_PUBLIC_API_URL=http://localhost:3000

# ============================================
# Site Configuration
# ============================================
# Your site's public URL (for SEO, sitemap, etc.)
# Development: http://localhost:3001
# Production: https://yourdomain.com
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# ============================================
# Optional Configuration
# ============================================
# Node environment (automatically set by Next.js)
# NODE_ENV=development

# Add any other environment variables you need here
# Note: Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# Variables without NEXT_PUBLIC_ are only available on the server

